# FilesOnTheGo Configuration
# Copy this file to .env and update the values for your environment

# ================================================================================
# S3 Storage Configuration
# ================================================================================

# S3 endpoint URL (required)
# For MinIO: http://localhost:9000
# For AWS S3: https://s3.amazonaws.com or https://s3.<region>.amazonaws.com
# For Backblaze B2: https://s3.<region>.backblazeb2.com
S3_ENDPOINT=http://localhost:9000

# S3 region (default: us-east-1)
# For MinIO: can be any value, typically "us-east-1"
# For AWS: must match your bucket region (e.g., us-west-2, eu-central-1)
S3_REGION=us-east-1

# S3 bucket name (required)
# This bucket must exist before starting the application
S3_BUCKET=filesonthego

# S3 access credentials (required)
# For MinIO default: minioadmin / minioadmin
# For AWS: use IAM credentials with S3 permissions
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Use SSL/TLS for S3 connections (default: true)
# Set to false for local MinIO without SSL
# Set to true for AWS S3 and production environments
S3_USE_SSL=false

# ================================================================================
# Application Configuration
# ================================================================================

# Application HTTP port (default: 8090)
APP_PORT=8090

# Application environment: development or production (default: development)
# In development: verbose logging, pretty console output
# In production: JSON logging, info level only
APP_ENVIRONMENT=development

# Public URL of the application (required)
# Used for generating share links and email templates
# Must include protocol (http:// or https://)
APP_URL=http://localhost:8090

# ================================================================================
# Database Configuration
# ================================================================================

# Path to PocketBase data directory (default: ./pb_data)
# This directory stores the SQLite database and migrations
# Ensure this directory is persistent and backed up
DB_PATH=./pb_data

# ================================================================================
# Upload Configuration
# ================================================================================

# Maximum upload size in bytes (default: 104857600 = 100MB)
# Examples:
#   10MB  = 10485760
#   50MB  = 52428800
#   100MB = 104857600
#   500MB = 524288000
#   1GB   = 1073741824
MAX_UPLOAD_SIZE=104857600

# ================================================================================
# Security Configuration
# ================================================================================

# JWT secret for token signing (required in production)
# Generate a strong random secret: openssl rand -hex 32
# IMPORTANT: Keep this secret secure and never commit it to version control
JWT_SECRET=change-me-in-production

# ================================================================================
# Feature Flags
# ================================================================================

# Allow public user registration (default: true)
# Set to false to restrict registration to admins only
PUBLIC_REGISTRATION=true

# Require email verification for new accounts (default: false)
# Set to true to send verification emails on registration
EMAIL_VERIFICATION=false

# Require email/password authentication (default: true)
# Set to false to allow other authentication methods only
REQUIRE_EMAIL_AUTH=true

# ================================================================================
# User Quota Configuration
# ================================================================================

# Default storage quota per user in bytes (default: 10737418240 = 10GB)
# Set to 0 for unlimited storage
# Examples:
#   1GB  = 1073741824
#   5GB  = 5368709120
#   10GB = 10737418240
#   50GB = 53687091200
#   100GB = 107374182400
DEFAULT_USER_QUOTA=10737418240

# ================================================================================
# Email Configuration (Optional - for notifications)
# ================================================================================

# SMTP server settings for sending emails
# Uncomment and configure if you need email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com

# ================================================================================
# Development Tools
# ================================================================================

# Enable debug logging for specific components (development only)
# DEBUG_S3=true
# DEBUG_AUTH=true
# DEBUG_UPLOAD=true
